<h1><%= user.name %></h1>

<h3><%= user.email %></h3>

<h3>Saved Journeys</h3>
<ul>
  <% user.journeys.forEach(journey => { %>
    <li><h4><%= journey.name %></h4></li>
    <li>Start: <%= journey.origin %></li>
    <li>Destination: <%= journey.destination %></li>
    <li><form method="post" action="/journeys/<%= journey.id %>">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete Journey">
    </form></li>
  <% }); %>
</ul>


<% if(locals.user._id === user._id) { %>
<a href="/users/<%= user._id %>/edit">Edit details</a>


<form method="post" action="/users/<%= user.id %>">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete User">
</form>

<% } %>
