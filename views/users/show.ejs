



<ul class="collapsible" data-collapsible="accordion">
    <li>
      <div class="collapsible-header active">Details</div>
      <div class="collapsible-body"><div class="row">
        <div class="userImage col s6">
          <% if(user.image) { %>
            <img class="z-depth-2" src="<%= user.image %>">
          <% } %>
        </div>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Name: <%= user.name %></span>
              <p>E-mail contact: <%= user.email %></p>
            </div>
            <div class="card-action">
            </div>
          </div>
        </div>
        
      </div></div>
    </li>
    <li>
      <div class="collapsible-header">Your Journeys</div>
      <div class="collapsible-body"><div class="row">

          <% user.journeys.forEach(journey => { %>
            <div class="col s12 m6">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title"><span class="journeyName"><%= journey.name %></span></span>
                  <p>Start: <%= journey.origin %></p>
                  <p>Destination: <%= journey.destination %></p>
                </div>
                <div class="card-action">
                  <form method="post" action="/journeys/<%= journey.id %>">
                    <input type="hidden" name="_method" value="delete">
                    <input class="btn waves-effect" type="submit" value="Delete Journey">
                  </form>
                </div>
              </div>
            </div>
          <% }); %>




      </div>
      </div>
    </li>
    <li>
      <div class="collapsible-header">Update Details</div>
      <div class="collapsible-body">
      <% if(locals.user._id === user._id) { %>
      <div class="row">
      <div class="col s12 m6">
        <a class="btn waves-effect" href="/users/<%= user._id %>/edit">Edit details</a>
      </div>

      <div class="col s12 m6">
        <form method="post" action="/users/<%= user.id %>">
          <input type="hidden" name="_method" value="delete">
          <input class="btn waves-effect" type="submit" value="Delete User">
        </form>
      </div>
      <% } %></div>
    </li>
  </ul>
